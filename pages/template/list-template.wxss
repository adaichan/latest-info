/* pages/template/list-template.wxss */
/* 定义模板样式 */
.tmpContainer {
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin: 10rpx 0;
}

.avatar_date {
  padding: 10rpx;
}

.avatar_date image {
  width: 60rpx;
  height: 60rpx;
  /* 基线对齐 */
  vertical-align: middle; 
  margin-right: 10rpx;
}

.avatar_date text {
  font-size: 32rpx;
}

.contentImg {
  width: 100%;
  height: 460rpx;
}

.newsTitle {
  font-size: 36rpx;
  font-weight: 700;
  margin: 10rpx;
}

.collection_love {
  margin: -5rpx 10rpx 10rpx 10rpx;
}

.collection_love content {
  font-size: 30rpx;
  font-weight: lighter;
  /* 文字缩进 */
  /* text-indent: 30rpx; */
  color: #6E6E6E;
}

.collection_love image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin: 0 10rpx 0 20rpx;
}

collection_love text {
  font-size: 28rpx;
}